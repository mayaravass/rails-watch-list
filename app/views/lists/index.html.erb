<h1>Lists</h1>
<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>List details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= link_to 'Show', list_path(list), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

