<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="mb-0">Lists</h1>
    <%= link_to 'Add new list', new_list_path, class: "btn btn-primary" %></td>
  </div>

  <div>
    <table class='table'>
      <thead>
        <tr>
          <th>Name</th>
          <th>List details</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @lists.each do |list| %>
          <tr>
            <td><%= list.name %></td>
            <td><%= link_to 'Show', list_path(list), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
